<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim240"
    android:layout_height="@dimen/dim240"
    android:background="@drawable/progress_dialog_bkg"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progress_bars"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Inverse"
        android:layout_width="@dimen/dim64"
        android:layout_height="@dimen/dim64"
        android:indeterminateDrawable="@drawable/progress_drawable_white" />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim15"
        android:layout_marginRight="@dimen/dim15"
        android:layout_marginTop="@dimen/dim25"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/text_loading"
        android:textColor="@color/white" />

</LinearLayout>